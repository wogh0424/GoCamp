<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
		"-//mybatis.org//DTD Mapper 3.0//EN"
		"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
		
<mapper namespace="com.itbank.repository.AdminDAO">
	<insert id="setDeletedReason" parameterType="admin">
		insert into board_delete_reason (idx, title, nickname, reason)
		values (#{idx}, #{title}, #{nickname}, #{reason})
	</insert>	
	
	<select id="deletedBoard" parameterType="string" resultType="admin">
		select * from board_delete_reason where nickname = #{nick}
	</select>
	
</mapper>
		